    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mario Rossi"
        android:textColor="#ffff">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info@nexter.it"
        android:textColor="#ffff">
    </TextView>

</LinearLayout>